---
const skills = [
  { category: 'Frontend', items: ['React', 'Next.js', 'Vue', 'TypeScript', 'Tailwind CSS', 'Astro'] },
  { category: 'Backend', items: ['Node.js', 'Express', 'NestJS', 'Python', 'Django'] },
  { category: 'Database', items: ['PostgreSQL', 'MongoDB', 'Redis', 'MySQL'] },
  { category: 'DevOps', items: ['Docker', 'AWS', 'CI/CD', 'Linux', 'Nginx'] },
];
---

<section id="skills" class="py-20 px-4 bg-gray-50 dark:bg-gray-800">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-4xl font-bold text-center mb-12">Habilidades Técnicas</h2>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      {skills.map(skill => (
        <div class="bg-white dark:bg-gray-900 p-6 rounded-xl shadow-lg">
          <h3 class="text-xl font-bold mb-4 text-blue-600 dark:text-blue-400">{skill.category}</h3>
          <ul class="space-y-2">
            {skill.items.map(item => (
              <li class="flex items-center gap-2">
                <span class="text-green-500">✓</span>
                <span>{item}</span>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</section>