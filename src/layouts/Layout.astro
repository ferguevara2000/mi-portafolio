---
import Navigation from '../components/Navigation.jsx';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width" />
	<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	<meta name="generator" content={Astro.generator} />
	<meta name="description" content="Portafolio de desarrollador fullstack especializado en React, Node.js y tecnologÃ­as modernas" />
	<title>{title}</title>
  </head>
  <body class="bg-white dark:bg-gray-900 text-gray-900 dark:text-white transition-colors">
	<Navigation client:load />
	<main>
	  <slot />
	</main>
	<Footer />
  </body>
</html>

<style is:global>
  html {
	scroll-behavior: smooth;
  }
  
  body {
	font-family: system-ui, -apple-system, sans-serif;
  }
</style>